<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/doctor"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="fitCenter"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_marginStart="135dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Neil Huston"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/doctor_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes Specialist"
                android:textColor="#BBBABF"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/doctor_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years_of_experience_s"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/doctor_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fees_s_per_hour"/>
            <TextView
                android:id="@+id/doctor_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:gravity="bottom|end"
                android:text="@string/rating_s_5"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>